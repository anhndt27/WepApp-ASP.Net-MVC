@model IEnumerable<WebAppFinal.DTOs.Reponse.CourseDTO>

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Any Course</h4>
    <hr/>
    @foreach (var item in Model)
    {
        <dl class="row shadow-inner">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Credits)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Credits)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(modelItem => item.Student)
            </dd>
        </dl>
        <div class="neo-left">
            <a class="btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item?.ID">Edit</a> |
            <a class="btn-outline-primary btn-sm" asp-action="Index">Back to List</a>
        </div>
    }

</div>
